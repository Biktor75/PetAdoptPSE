<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <!-- Configuración de entorno -->
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>

    <!-- Faces Servlet -->
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>

    <!-- Sesión -->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <!-- Página de bienvenida -->
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>

    <!-- Login por formulario -->
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>jdbc-realm</realm-name>
        <form-login-config>
            <form-login-page>/faces/login/login.xhtml</form-login-page>
            <form-error-page>/faces/login/login.xhtml</form-error-page>
        </form-login-config>
    </login-config>

    <!-- Roles -->
    <security-role>
        <role-name>cliente</role-name>
    </security-role>
    <security-role>
        <role-name>refugio</role-name>
    </security-role>
    <security-role>
        <role-name>admin</role-name>
    </security-role>

    <!-- Restricción para clientes -->
    <security-constraint>
        <display-name>Área cliente</display-name>
        <web-resource-collection>
            <web-resource-name>Cliente</web-resource-name>
            <url-pattern>/faces/clientes/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>cliente</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Restricción para refugios -->
    <security-constraint>
        <display-name>Área refugio</display-name>
        <web-resource-collection>
            <web-resource-name>Refugio</web-resource-name>
            <url-pattern>/faces/refugios/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>refugio</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Restricción para administradores -->
    <security-constraint>
        <display-name>Área admin</display-name>
        <web-resource-collection>
            <web-resource-name>Admin</web-resource-name>
            <url-pattern>/faces/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

</web-app>
